<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/biaotou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="音乐类"
        android:textSize="14sp"
        android:textColor="@color/zhengwen2"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        >
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            >
            
            <ImageView 
                android:id="@+id/tu_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="6dp"
                android:src="@drawable/tu1"
                android:scaleType="fitXY"
                />
            <ImageView 
                android:id="@+id/tu_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:src="@drawable/tu2"
                android:scaleType="fitXY"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:paddingBottom="12dp"
            >
            
            <ImageView 
                android:id="@+id/tu_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="6dp"
                android:src="@drawable/tu3"
                android:scaleType="fitXY"
                />
            <ImageView 
                android:id="@+id/tu_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:src="@drawable/tu4"
                android:scaleType="fitXY"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
