<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    >
	    
	    <RadioButton 
	        android:id="@+id/shouye"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="首页"
	        android:textSize="11sp"
	        android:textColor="#686868"
	        android:button="@null"
	        android:drawableTop="@drawable/rub_course_home_page_not_selected_bg"
	        android:gravity="center"
	        android:layout_gravity="center_vertical"
	        />
	    
	    <RadioButton 
	        android:id="@+id/fenlei"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="分类"
	        android:textSize="11sp"
	        android:textColor="#686868"
	        android:button="@null"
	        android:drawableTop="@drawable/rub_course_category_not_selected_bg"
	        android:gravity="center"
	        android:layout_gravity="center_vertical"
	        />
	    
	    <RadioButton 
	        android:id="@+id/category"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="圈子"
	        android:textSize="11sp"
	        android:textColor="#686868"
	        android:button="@null"
	        android:drawableTop="@drawable/rub_course_group_not_selected_bg"
	        android:gravity="center"
	        android:layout_gravity="center_vertical"
	        />
	    
	    <RadioButton 
	        android:id="@+id/me"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="我"
	        android:textSize="11sp"
	        android:textColor="#686868"
	        android:button="@null"
	        android:drawableTop="@drawable/rub_course_me_not_selected_bg"
	        android:gravity="center"
	        android:layout_gravity="center_vertical"
	        />
	</LinearLayout>

</LinearLayout>
