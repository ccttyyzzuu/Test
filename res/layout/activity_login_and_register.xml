<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent" >
     <LinearLayout android:id="@+id/login_and_register_navigation"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        
        <TextView android:id="@+id/main_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rub_course_back_icon"/>
        <TextView android:layout_marginLeft="10dp"
            android:id="@+id/main_xiala_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="登录注册"
            android:gravity="center"
            android:textColor="@color/navigation"
            android:textSize="17sp"/>
        </LinearLayout>
        <View android:layout_below="@id/login_and_register_navigation"
            android:id="@+id/login_and_register_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backColor">              
        </View>
        <TextView android:id="@+id/login_and_register_icon"
            android:background="@drawable/about_us_image_style"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            />
        
        <Button
            android:id="@+id/main_register"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_below="@id/login_and_register_icon"
            android:background="@drawable/oringe_butn"
            android:text="极速注册"
            android:textColor="#ffffff"/>
        
        <Button 
            android:id="@+id/main_login"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/login_and_register_view"
            android:background="@drawable/white_butn"
            android:text="登录"
            android:textColor="@color/body_24"/>

</RelativeLayout>
