<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView android:id="@+id/post_infomation_pre_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/rub_course_back_icon"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="帖子详情"/>    
        <ImageView android:id="@+id/post_infomation_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/rub_course_build_post_pen"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#A39D9D"/>
    <TextView android:id="@+id/mypost_item_title" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我是如何考上高级UI设计师的"/>
    <TextView android:id="@+id/mypost_item_time" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2015-12-12"/>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/mypost_item_comment"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/rub_course_grey_comment"
            android:text="123"/>
        <TextView android:id="@+id/mypost_item_praise"
            android:layout_toLeftOf="@id/mypost_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/rub_course_praise_grey_little"
            android:text="123"/>
    </RelativeLayout>

</LinearLayout>
