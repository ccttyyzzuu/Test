    <include layout="@layout/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <TextView 
            android:id="@+id/course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="课程"
            android:textSize="15sp"
            android:textColor="@color/mainJu"
            android:gravity="center"
            />
        
        <TextView
            android:id="@+id/organization" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="机构"
            android:textColor="@color/zhengwen2"
            android:textSize="15sp"
            android:gravity="center"
            />
    </LinearLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/beijingse"
        />
    <LinearLayout 
        android:id="@+id/replaceable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        >
    	<ScrollView 
        	android:id="@+id/gundongtiao"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	>
        
        	<LinearLayout 
            	android:id="@+id/center_content"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:orientation="vertical"
            	>
        	</LinearLayout>
        
    	</ScrollView>
    </LinearLayout>
    
    <include layout="@layout/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>
    
