<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/course_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rub_course_back_icon" />

        <TextView
            android:id="@+id/course_detail_title_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="二胡八段干货讲座"
            android:textColor="@color/navigation"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/course_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/rub_course_share_icon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="9"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/course_detail_gongshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="汉昌IT岗前实训中心"
                android:textColor="@color/aux_1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/course_detail_yuyue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/course_detail_ratingbar"
                android:layout_alignLeft="@+id/course_detail_gongshi"
                android:layout_below="@+id/course_detail_gongshi"
                android:gravity="center"
                android:text="预约"
                android:textColor="@color/body_22"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/course_detail_person_numb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/course_detail_ratingbar"
                android:layout_below="@+id/course_detail_gongshi"
                android:layout_toRightOf="@+id/course_detail_yuyue"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/red"
                android:textSize="11sp" />

            <RatingBar
                android:id="@+id/course_detail_ratingbar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_detail_gongshi"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/course_detail_person_numb"
                android:numStars="5"
                android:rating="4"
                android:stepSize="0.1" />

            <TextView
                android:id="@+id/course_detail_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/course_detail_gongshi"
                android:layout_marginRight="20dp"
                android:background="@drawable/rub_course_collections" />
        </RelativeLayout>

        <TextView
            android:id="@+id/course_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="二胡八段干货讲座"
            android:textColor="@color/body_24"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/course_detail_positon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="渝中区牛角沱太平洋广场3楼"
            android:textColor="@color/body_22"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/course_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="02-01	09:00"
            android:textColor="@color/body_22"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/course_detail_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/course_detail_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情："
            android:textColor="@color/body_24"
            android:textSize="14sp" />
        <TextView android:id="@+id/course_detail_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="		二胡对手指精密度的训练"
            android:textColor="@color/body_22"
            android:textSize="11sp"/>
        <Button 
            android:id="@+id/course_detail_btn_cengke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我想蹭她"
            android:textColor="@color/aux_1"
            android:textSize="11sp"
            android:background="@drawable/course_detail_btn_style"/>
    </LinearLayout>

</LinearLayout>