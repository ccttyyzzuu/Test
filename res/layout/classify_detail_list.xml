<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="6dp"
            >
            
            <ImageView 
                android:id="@+id/image_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/image_one"
                android:scaleType="fitXY"
                />
            
            <TextView 
                android:id="@+id/class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二胡十段兴趣班"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                />
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                >
                
                <TextView 
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已报"
                    android:textColor="@color/zhengwen2"
                    android:textSize="12sp"
                    />
                <TextView 
                    android:id="@+id/apply_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/zhengwen2"
                    android:textSize="12sp"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"
                    android:textColor="@color/zhengwen2"
                    android:textSize="12sp"
                    />
                <TextView 
                    android:id="@+id/institution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="渝中汉昌"
                    android:textColor="@color/zhengwen2"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"
                    />
            </LinearLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
         		android:layout_marginTop="12dp"
                >
                
                <TextView 
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kecheng_beijing"
                    android:text="乐器"
                    android:textSize="12sp"
                    android:textColor="@color/zhengwen2"
                    />
                
                <TextView 
                    android:id="@+id/diploma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kecheng_beijing"
                    android:text="小学"
                    android:layout_toRightOf="@id/type"
                    android:textSize="12sp"
                    android:textColor="@color/zhengwen2"
                    android:layout_marginLeft="10dp"
                    />
                
                <TextView 
                    android:id="@+id/tian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    android:layout_alignParentRight="true"
                   	android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:textColor="@color/zhengwen2"
                    />
                
                <TextView 
                    android:id="@+id/day_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_toLeftOf="@id/tian"
                   	android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:textColor="@color/mainHong"
                    />
                
                <TextView 
                    android:id="@+id/yu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余"
                    android:layout_toLeftOf="@id/day_number"
                   	android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:textColor="@color/zhengwen2"
                    />
            </RelativeLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            > <ImageView 
                android:id="@+id/image_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/image_two"
                android:scaleType="fitXY"
                />
            
            <TextView 
                android:id="@+id/class_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钢琴初级班"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                />
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                >
                
                <TextView 
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已报"
                    android:textColor="@color/zhengwen2"
                    android:textSize="12sp"
                    />
                <TextView 
                    android:id="@+id/apply_number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/zhengwen2"
                    android:textSize="12sp"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"
                    android:textColor="@color/zhengwen2"
                    android:textSize="12sp"
                    />
                <TextView 
                    android:id="@+id/institution2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="渝中汉昌"
                    android:textColor="@color/zhengwen2"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"
                    />
            </LinearLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
         		android:layout_marginTop="12dp"
                >
                
                <TextView 
                    android:id="@+id/type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kecheng_beijing"
                    android:text="乐器"
                    android:textSize="12sp"
                    android:textColor="@color/zhengwen2"
                    />
                
                <TextView 
                    android:id="@+id/diploma2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kecheng_beijing"
                    android:text="小学"
                    android:layout_toRightOf="@id/type2"
                    android:textSize="12sp"
                    android:textColor="@color/zhengwen2"
                    android:layout_marginLeft="10dp"
                    />
                
                <TextView 
                    android:id="@+id/tian2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    android:layout_alignParentRight="true"
                   	android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:textColor="@color/zhengwen2"
                    />
                
                <TextView 
                    android:id="@+id/day_number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_toLeftOf="@id/tian2"
                   	android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:textColor="@color/mainHong"
                    />
                
                <TextView 
                    android:id="@+id/yu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余"
                    android:layout_toLeftOf="@id/day_number2"
                   	android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:textColor="@color/zhengwen2"
                    />
            </RelativeLayout></LinearLayout>
    </LinearLayout>

</LinearLayout>
