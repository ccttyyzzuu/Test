<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/course_list_listview_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/course_list_listview_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="二胡十段兴趣班"
            android:textColor="@color/body_24"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/course_list_listview_person_numb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已报1人"
                android:textColor="@color/body_22"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/course_list_listview_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="渝中汉昌"
                android:textColor="@color/body_22"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/course_list_listview_instrument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/course_list_item_style"
                android:text="乐器"
                android:padding="1dp"
                android:textColor="@color/body_22"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/course_list_listview_primary_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:background="@drawable/course_list_item_style"
                android:text="小学"
                android:padding="1dp"
                android:textColor="@color/body_22"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="余"
                android:textColor="@color/body_22"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/course_list_listview_remain_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/aux_1"
                android:textSize="11sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="天"
                android:textColor="@color/body_22"
                android:textSize="11sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>