<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView android:id="@+id/post_infomation_pre_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/rub_course_back_icon"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="帖子详情"/>    
        <ImageView android:id="@+id/post_infomation_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/rub_course_share_icon"/>
    </LinearLayout>
    
     <View android:layout_width="match_parent"
         android:layout_height="3dp"
         android:background="#7C7876"/>
     <LinearLayout android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         <ImageView android:id="@+id/post_infomation_head"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/ic_launcher"/>
         
         <LinearLayout android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:orientation="vertical">
         
             <TextView android:id="@+id/post_infomation_name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="我是张小哥"/>
             <TextView android:id="@+id/post_infomation_time"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="2015-11-12"/>
         </LinearLayout>
         
         <ImageView android:id="@+id/post_infomation_select"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/rub_course_star_non_selected"/>
     </LinearLayout>
     
     <TextView android:id="@+id/post_infomation_genre"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="中国文学大典"/>
     
     <LinearLayout android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         <TextView android:id="@+id/post_infomation_praise"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/rub_course_praise_grey_little"
             android:text="50"/>
         
         <TextView android:id="@+id/post_infomation_comment"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/rub_course_grey_comment"
             android:text="25"/>
     </LinearLayout>
     
      <ImageView android:id="@+id/post_infomation_show_picture"
          android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/rub_course_user_temp_bg"/>
      
       <TextView android:id="@+id/post_infomation_details"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:singleLine="false"
             android:text="详情\n感悟艺术"/>
         <View android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:background="#7C7876"/>
         <TextView 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="评论"/>
         
         <ListView android:id="@+id/post_infomation_listview"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"/>
         
         
          <LinearLayout android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         <TextView android:id="@+id/post_infomation_click_comment"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:padding="10dp"
             android:drawableLeft="@drawable/rub_course_grey_comment"
             android:gravity="center"
             android:text="评论"/>
         
         <TextView android:id="@+id/post_infomation_click_praise"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
              android:padding="10dp"
             android:drawableLeft="@drawable/rub_course_praise_grey_little"
             android:gravity="center"
             android:text="赞"/>
     </LinearLayout>
</LinearLayout>
